<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/lightGray"
        tools:context=".Activities.DisplayCardActivity">

    <include layout="@layout/snippet_top_card_display"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="クレジットカード"
            android:textSize="16sp"
            android:layout_margin="@dimen/activity_horizontal_margin"
    />

    <RelativeLayout
            android:id="@+id/registerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/appbar_padding_top"
            android:layout_marginRight="@dimen/appbar_padding_top"
            android:layout_marginLeft="@dimen/appbar_padding_top">

        <ImageView
                android:id="@+id/cardIv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/visa"
        />

        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="クレジットカードを登録する"
                android:layout_toRightOf="@+id/cardIv"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />

    </RelativeLayout>

</LinearLayout>