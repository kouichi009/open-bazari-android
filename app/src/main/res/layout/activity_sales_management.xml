<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activities.SalesManagementActivity">

    <include layout="@layout/snippet_simple_backarrow"/>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/scrollView">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_margin="@dimen/appbar_padding_top"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="売上残高"/>

                <TextView
                        android:id="@+id/salesBalanceTv"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3200円"/>


            </RelativeLayout>

            <RelativeLayout
                    android:background="@color/grey"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                <TextView
                        android:layout_marginLeft="@dimen/appbar_padding_top"
                        android:text="売上の管理"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/appbar_padding_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/trasferApplicationLayout"
                    android:layout_marginLeft="@dimen/appbar_padding_top"
                    android:layout_marginRight="@dimen/appbar_padding_top"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                <ImageView
                        android:id="@+id/walletIv"
                        android:src="@drawable/ic_wallet"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                <TextView
                        android:layout_toRightOf="@+id/walletIv"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="振込申請(現金で受取)"/>




            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"

            />


            <RelativeLayout
                    android:id="@+id/chargeHistoryLayout"
                    android:layout_marginLeft="@dimen/appbar_padding_top"
                    android:layout_marginRight="@dimen/appbar_padding_top"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                <ImageView
                        android:id="@+id/fileIv"
                        android:src="@drawable/ic_file"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                <TextView
                        android:layout_toRightOf="@+id/fileIv"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入出金・チャージ履歴"/>




            </RelativeLayout>

            <View
                    android:layout_below="@+id/walletIv"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/view"
                    android:background="@color/grey"

            />

        </LinearLayout>

    </ScrollView>

</LinearLayout>