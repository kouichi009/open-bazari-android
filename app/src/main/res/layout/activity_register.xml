<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.RegisterActivity" tools:layout_editor_absoluteY="25dp">

    <ImageView
            android:layout_width="205dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/bazarimoji"
            android:id="@+id/imageView4"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/facebookLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <RelativeLayout

            android:id="@+id/facebookLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/blue"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/emailRegisterLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp">

        <ImageView
                android:id="@+id/facebookIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/facebook_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebookで登録・ログイン"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/facebookIcon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorOrange"
            android:id="@+id/emailRegisterLayout"
            app:layout_constraintTop_toBottomOf="@+id/facebookLayout" android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/emailLoginLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp">

        <ImageView
                android:id="@+id/registerEmailIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/email_logo"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="メールアドレスで新規登録"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/registerEmailIcon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/flame_black"
            android:id="@+id/emailLoginLayout"
            app:layout_constraintTop_toBottomOf="@+id/emailRegisterLayout" android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/emailLoginLayout2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp">

        <ImageView
                android:id="@+id/emailLoginIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/email_logo"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="メールアドレスでログイン"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/emailLoginIcon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/emailLoginLayout2"
            app:layout_constraintTop_toBottomOf="@+id/emailLoginLayout" android:layout_marginBottom="117dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/backLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="機種変更のデータ引き継ぎはログインへ"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:background="@drawable/flame_black"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/backLayout"
            app:layout_constraintTop_toBottomOf="@+id/emailLoginLayout2"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="あとで登録する"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="20dp" android:layout_centerInParent="true"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>