<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.KiyakuAgreeActivity">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_marginTop="28dp" android:layout_marginBottom="67dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="カメラ製品専門のフリマアプリ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/textView2" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="業界最安値の販売手数料3%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:id="@+id/textView4" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginStart="12dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="45dp" app:layout_constraintBottom_toTopOf="@+id/kiyakuTv"/>
    <TextView
            android:id="@+id/kiyakuTv"
            android:text="利用規約をご確認の上、登録に進んでください"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginBottom="51dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/agreeBtn"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/agreeBtn"
            android:text="利用規約に同意する"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kiyakuTv"
            android:layout_marginBottom="138dp"/>

</android.support.constraint.ConstraintLayout>